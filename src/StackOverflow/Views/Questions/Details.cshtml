@model StackOverflow.Models.Question

@{
    ViewData["Title"] = "Log In";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Question Detail</h2>
<hr />

<h3>@Html.DisplayFor(model => model.Title)</h3>
<h5>@Html.DisplayFor(model => model.Body)</h5>

@foreach(var listItem in Model.Responses)
{
    <h4>@Html.DisplayFor(modelItem => listItem.Body) </h4>

}

@Html.ActionLink("Answer this question", "Create", "Responses")

@Html.ActionLink("Back to list", "Index")